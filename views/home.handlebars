	{{#if viewAlt}}
	<!-- game listings -->
	<div class="container-fluid gamelist">

		<div id="mainMap">
		</div>
		<script>
			// initialize the map
			var map1 = L.map('mainMap').setView([32.881114, -117.237478], 13);

			var layer1 = L.tileLayer('https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}{r}.png', {
				attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors &copy; <a href="https://carto.com/attributions">CARTO</a>',
				subdomains: 'abcd',
				maxZoom: 19
			}).addTo(map1)
		</script>
		{{#each games}}
		<div class="game">
			<div class="row">
				<div class="col-8">
					<h3 class="gamename">{{name}}</h3>
				</div>
				<div class="checkboxcontainer col-4">
					<p class="savegame"> Save Game</p><input class="checkbox" type="checkbox" id="{{id}}">
				</div>
				<div class="col-4">
					<h5 class="distance">{{distance}}mi</h5>
				</div>
			</div>
			<h5>{{time}} &emsp; {{date}}</h5>
			<h5>{{skill}} &emsp; {{players}}</h5>
		</div>

		<script>
			var marker = L.marker([{{lat}}, {{lon}}]).addTo(map1);
			marker.bindPopup("{{name}}");
		</script>
		{{/each}}
	</div>



