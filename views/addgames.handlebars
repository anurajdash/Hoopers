	<!-- Main Form Elements -->
	<div class="container">
		<form id="addGamesForm" role="form" method="get" action="/addgamesview">
			<br>
			<div class="form-group">
				<label for="game-name">Name</label><br>
				<input type="text" class="form-control" id="game-name" name="name" placeholder="game name" required>
			</div>

			<div class="form-group">
				<label for="game-time">Time</label><br>
				<input type="time" class="form-control" id="game-time" name="time" required>
			</div>

			<div class="form-group">
				<label for="game-date">Date</label><br>
				<input type="date" class="form-control" id="game-date" name="date" required>
			</div>

			<div class="form-group">
				<label for="game-skill">Skill</label><br>
				<select class="form-control" id="game-skill" name="skill">
					<option>Beginner</option>
					<option>Intermediate</option>
					<option>Advanced</option>
				</select required>
			</div>

			<div class="form-group">
				<label for="game-players">Players</label><br>
				<input type="text" class="form-control" id="game-players" name="players" placeholder="4v4" required>
			</div>

			<div id="userMap">
			</div>

			<br>

			<div class="text-center">
				<button type="submit" id="submitbtn" class="btn btn-primary">Save Game</input required>
			</div>
		</form>
	</div>

	<script>
		//initialize map
		var map1 = L.map('userMap').setView([32.881114, -117.237478], 13);

		//create layers and add to map
		var layer1 = L.tileLayer('https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}{r}.png', {
			attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors &copy; <a href="https://carto.com/attributions">CARTO</a>',
			subdomains: 'abcd',
			maxZoom: 19
		}).addTo(map1)

		//create a marker where the user clicks
		var newMarker;
		map1.on("click", function (event) {
			if (newMarker) {
				newMarker.setLatLng(event.latlng);
				return;
			}

			newMarker = L.marker(event.latlng, {
				draggable: true
			}).addTo(map1).on("click", function () {
				event.originalEvent.stopPropagation();
			});
		});

	</script>


